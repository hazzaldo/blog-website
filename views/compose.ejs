<%- include("partials/header"); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="composeTitle">Title</label>
    <input type="text" id="composeTitle" class="form-control" name="composeTitle" autocomplete="off"/>
  </div>
  <div class="form-group">
    <label for="composeContent">Post</label>
    <textarea id="composeContent" class="form-control" name="composeContent" cols="30" rows="10"></textarea>
  </div>
  <button type="submit" class="btn btn-primary" name="publishButton">Publish</button>
</form>

<%- include("partials/footer"); -%>
